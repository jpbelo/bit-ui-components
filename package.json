{
  "name": "bit-ui-components",
  "version": "1.0.0",
  "description": "UI components library",
  "main": "dist/ui-components.js",
  "scripts": {
    "start": "start-storybook -p 3000 --ci",
    "pretty": "prettier --write components/**/*.js",
    "test": "jest",
    "build": "webpack --mode production",
    "generate": "generact"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpbelo/bit-ui-components.git"
  },
  "author": "Jo√£o Belo <joaobelo.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jpbelo/bit-ui-components/issues"
  },
  "homepage": "https://github.com/jpbelo/bit-ui-components#readme",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "babel-loader": "^8.0.6",
    "css-loader": "^2.1.1",
    "generact": "^0.4.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "node-sass": "^4.12.0",
    "prettier": "^1.17.1",
    "sass-loader": "^7.1.0",
    "storybook-addon-jsx": "^7.1.2",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "sanitize.css": "^9.0.0",
    "styled-components": "^4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "components/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/react@1.0.2"
    },
    "componentsDefaultDirectory": "src/components/{name}",
    "packageManager": "npm"
  }
}
